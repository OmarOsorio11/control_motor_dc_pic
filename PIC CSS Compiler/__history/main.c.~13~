#include <main.h>


#use standard_io(a)
#use standard_io(b)

void main()
{
   set_tris_b(0b11111);
   set_tris_b(0b00000000);
   
   output_high(PIN_B2);
   
   while(TRUE)
   {
      
      
      
      if (input_state(PIN_A0)==1)
      {
         output_high(PIN_B0);
         output_low(PIN_B1);
      }
      if (input_state(PIN_A0==1))
      {
         output_low(PIN_B0);
         output_high(PIN_B1);
      } 
      if (input_state(PIN_A0)==0 && input_state(PIN_A0)==0))
      
      {
         output_low(PIN_B0);
         output_low(PIN_B1);
      }
      
   }

}
